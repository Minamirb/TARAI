<% scope = [:activerecord, :attributes] %>
<h1><%= t(:show_user) %></h1>
<table>
  <tr>
    <th align="left" width="20%"><%= t('user.name', :scope => scope) %></th><td><%= @user.name %></td>
  </tr>
  <tr>
    <th align="left" width="20%"><%= t('user.email', :scope => scope) %></th><td><%= @user.email %></td>
  </tr>
  <tr>
    <th align="left" width="20%"><%= t(:twitter_auth) %></th>
    <td>
      <% if @user.twitter_auth? %>
      <%= t(:already_auth) %>
      <% else %>
      <%= t(:not_auth) %>
      <% end %>
    </td>
  </tr>
</table>
<br />
<%= link_to t(:edit), edit_user_registration_path %>
